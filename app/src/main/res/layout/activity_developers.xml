<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_return"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/dev_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/dev_logo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5.5"
                    android:src="@mipmap/dev_devlogo"
                    android:layout_marginTop="20dp"/>
                <ImageView
                    android:id="@+id/dev_builtby"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/dev_builtby"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/dev_cyber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/dev_cyberlab"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/dev_android_logo"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/dev_android_logo"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/dev_android"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
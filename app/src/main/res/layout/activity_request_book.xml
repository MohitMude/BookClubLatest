<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activiy_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/toolbar_return"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="16dp" />
    </android.support.v7.widget.Toolbar>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/additional_info"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle2"
            android:ems="10"
            android:fontFamily="@font/josefin_slab_thin"
            android:gravity="center_vertical"
            android:hint="additional information (optional)"
            android:inputType="textPersonName"
            android:paddingLeft="24dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/headingColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/request_author_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/request_author_name"
            app:layout_constraintTop_toBottomOf="@+id/request_publication_name" />

        <Button
            android:id="@+id/request_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/quicksand_regular"
            android:text="Send Request"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/request_book_name"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rectangle2"
            android:textColorHint="@color/headingColor"

            android:ems="10"
            android:fontFamily="@font/josefin_slab_thin"
            android:gravity="center_vertical"
            android:hint="Book Name"
            android:inputType="textPersonName"
            android:paddingLeft="24dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/request_author_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/request_author_name"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:layout_constraintVertical_weight="1" />

        <EditText
            android:id="@+id/request_author_name"
            android:layout_width="0dp"
            android:textColorHint="@color/headingColor"

            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectangle2"
            android:ems="10"
            android:fontFamily="@font/josefin_slab_thin"
            android:gravity="center_vertical"

            android:hint="Author Name"
            android:inputType="textPersonName"
            android:paddingLeft="24dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/request_book_name"
            app:layout_constraintVertical_weight="1" />

        <EditText
            android:id="@+id/request_publication_name"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle2"
            android:ems="10"
            android:textColorHint="@color/headingColor"
            android:fontFamily="@font/josefin_slab_thin"
            android:gravity="center_vertical"
            android:hint="Publication (optional)"
            android:inputType="textPersonName"
            android:paddingLeft="24dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/request_author_name"
            app:layout_constraintStart_toStartOf="@+id/request_author_name"
            app:layout_constraintTop_toBottomOf="@+id/request_author_name"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/quicksand_regular"
            android:padding="6dp"
            android:text="Fill the following form and we promise to look if your demands can be fulfilled"
            android:textAlignment="center"
            android:textColor="#216583"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1" />


        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/myCoordinatorLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/request_button">
        </android.support.design.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</android.support.constraint.ConstraintLayout>